mysql

docker run --name dmz_db -p 3306:3306 --volume /tmp/dmz-db --restart always -e MYSQL_ROOT_PASSWORD=hello123 -d mysql:latest

docker run -d --name dmz_db -p 3306:3306 --restart=always -e MYSQL_ROOT_PASSWORD=hello123 -e MYSQL_DATABASE=wordpress -e MYSQL_USER=wordpressuser -e MYSQL_PASSWORD=hello123 -v mysql_data:/var/lib/mysql mysql:latest


Database:
docker exec  dmz_db  mysql -uroot -phello123 -e 'show databases;' 
docker exec -it dmz_db sh (to get into the Linux terminal )
docker exec -it dmz_db mysql -uroot -phello123 (to go to into db)


Letâ€™s learn Database Now!
CREATE DATABASE dmz_db;
use dmz_db;


CREATE TABLE personal_info (personID int, Last_Name varchar(255), First_Name varchar(255), Address varchar(255), City varchar(255), state varchar(255));
SELECT * FROM personal_info;

INSERT INTO personal_info (personID, Last_Name, First_Name, Address, City, state) values (1001, 'ahmad', 'maghfoor', '123 xyz street', 'niagara falls', 'new york');
INSERT INTO personal_info (personID, Last_Name, First_Name, Address, City, state) values (1002, 'maria', 'alen', '666 queens blvd', 'brooklyn', 'new york');
